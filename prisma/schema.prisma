generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name    String
  contacts     ContactGroup[]
  events      Event[]
}

model Contact {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  firstname    String
  lastname    String
  birth       DateTime? @db.Date
  country     String?
  city        String?
  company       Company?    @relation(fields: [companyId], references: [id])
  companyId     Int
  post        String?
  nationality String?
  link        String?
  languages   ContactLanguage[]
  groups      ContactGroup[]
  tags        ContactTag[]
}
model Language  {
  id          Int       @id @default(autoincrement())
  name        String
  contacts   ContactLanguage[]
}
model Tag {
  id        Int       @id @default(autoincrement())
  name      String
  contact   ContactTag[]
}
model ContactTag {
  contact   Contact    @relation(fields: [contactId], references: [id])
  contactId     Int 
  tag   Tag @relation(fields: [tagId], references: [id])
  tagId  Int 

  @@id([contactId, tagId])
}
model ContactLanguage {
  contact   Contact    @relation(fields: [contactId], references: [id])
  contactId     Int 
  language   Language @relation(fields: [languageId], references: [id])
  languageId  Int 

  @@id([contactId, languageId])
}

model ContactGroup {
  contact   Contact    @relation(fields: [contactId], references: [id])
  contactId     Int 
  group   Group @relation(fields: [groupId], references: [id])
  groupId  Int 

  @@id([contactId, groupId])
}

model Company {
  id          Int       @id @default(autoincrement())
  name        String
  employees   Contact[]
}

model Event {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  username    String
  group       Group?    @relation(fields: [groupId], references: [id])
  groupId     Int
}