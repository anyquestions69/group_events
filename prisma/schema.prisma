generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name    String
  contacts     Contact[]
  events      Event[]
  tags        Tag[]
}

model Contact {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  firstname    String
  lastname    String
  image       String?
  birth       DateTime? @db.Date
  country     String?
  city        String?
  company       Company?    @relation(fields: [companyId], references: [id])
  companyId     Int?
  post        String?
  nationality String?
  link        String?
  languages   Language[]
  groups      Group[]
  tags        Tag[]
  events      Event[]
}
model Language  {
  id          Int       @id @default(autoincrement())
  name        String
  contacts   Contact[]
}
model Tag {
  id        Int       @id @default(autoincrement())
  name      String  @unique
  contacts   Contact[]
  groups    Group[]
}


model Company {
  id          Int       @id @default(autoincrement())
  name        String
  employees   Contact[]
}

model Event {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name    String
  description String
  timeStart        DateTime
  timeEnd        DateTime
  group       Group?    @relation(fields: [groupId], references: [id])
  groupId     Int
  contacts    Contact[]
}